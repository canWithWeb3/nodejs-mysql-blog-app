<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12">
                <form method="POST" enctype="multipart/form-data">
                    <!-- baslik -->
                    <div class="row mb-3">
                        <label for="baslik" class="col-sm-2">Başlık:</label>
                        <div class="col-sm-8">
                            <input type="text" name="baslik" id="baslik" class="form-control">
                        </div>
                    </div>

                    <!-- altbaslik -->
                    <div class="row mb-3">
                        <label for="altbaslik" class="col-sm-2">Alt Başlık:</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" name="altbaslik" id="altbaslik" rows="3"></textarea>
                        </div>
                    </div>

                    <!-- aciklama -->
                    <div class="row mb-3">
                        <label for="aciklama" class="col-sm-2">Açıklama:</label>
                        <div class="col-sm-8">
                            <textarea id="editor" class="form-control" name="aciklama" id="aciklama" rows="5"></textarea>
                        </div>
                    </div>

                    <!-- resim -->
                    <div class="row mb-3">
                        <label for="resim" class="col-sm-2">Resim:</label>
                        <div class="col-sm-8">
                            <input type="file" name="resim" id="resim" class="form-control">
                        </div>
                    </div>
                    
                    <!-- kategori -->
                    <div class="row mb-3">
                        <label for="kategori" class="col-sm-2">Kategori:</label>
                        <div class="col-sm-8">
                            <select name="kategori" name="kategori" id="kategori" class="form-select">
                                <option value="-1" selected>Seçiniz</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>

                    <!-- anasayfa -->
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <div class="form-check">
                                <input type="checkbox" name="anasayfa" id="anasayfa" class="form-check-input">
                                <label for="anasayfa" class="form-check-label">
                                    Anasayfa
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- onay -->
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <div class="form-check">
                                <input type="checkbox" name="onay" id="onay" class="form-check-input">
                                <label for="onay" class="form-check-label">
                                    Onay
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- submit form btn -->
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.ckeditor.com/ckeditor5/38.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
</body>
</html>