<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th style="width: 130px;">resim</th>
                            <th>baslik</th>
                            <th>kategori</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% blogs.forEach(blog => { %>
                            <tr>
                                <td><%= blog.id %></td>
                                <td>
                                    <img src="/static/images/<%= blog.resim %>" alt="" class="img-fluid">
                                </td>
                                <td><%= blog.baslik %></td>
                                <td>
                                    <% blog.categories.forEach(category => { %>
                                        <%= category.name %>,
                                    <% }) %>
                                </td>
                                <td>
                                    <a href="/admin/blogs/<%= blog.id %>" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="/admin/blogs/delete/<%= blog.id %>" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>



